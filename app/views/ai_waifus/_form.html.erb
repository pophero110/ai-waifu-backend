<div class="d-flex justify-content-center">
    <%= form_with model: @ai_waifu do |f| %>
        <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-controler" %>        
        </div>
        <div class="mb-3">
            <%= f.label :image, class: "form-label" %>
            <%= f.file_field :image, class: "form-control" %>
        </div>
        <input type="submit" class="btn btn-info" value="Sumbit">
        <% if !@ai_waifu.new_record? %>
            <%= render "destroy_form" %>
        <% end %>
    <% end %>
</div>
<div class="d-flex justify-content-center">
    <% if @ai_waifu.image.attached? %>
        <%= image_tag @ai_waifu.image %>
    <% end %>
</div>
